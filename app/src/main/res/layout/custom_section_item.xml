<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:transitionName="imgAlbumArt">

    <TextView
        android:id="@+id/txt_section_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="A Sector"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14dp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_reserve_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:text="47" />

        <TextView
            android:id="@+id/txt_total_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:text="50" />

        <ProgressBar
            android:id="@+id/pb_total"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:max="50"
            android:progress="50"
            android:progressDrawable="@drawable/circular_progressbar_back"
            android:rotation="270" />

        <ProgressBar
            android:id="@+id/pb_reserve"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:max="50"
            android:progress="10"
            android:progressDrawable="@drawable/circular_progressbar"
            android:rotation="270" />
    </FrameLayout>
</LinearLayout>