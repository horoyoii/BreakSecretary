<?xml version="1.0" encoding="utf-8"?>
<!-- This is the fragment  to be displayed for a section associated with a tab -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imgAlbum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00f0f0"
            android:src="@drawable/ic_test"
            android:transitionName="imgAlbumArt" />
    </LinearLayout>

    <GridLayout
        android:useDefaultMargins="true"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:columnCount="2">

        <LinearLayout
            android:id="@+id/frag_RAC_SectorA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:transitionName="imgAlbumArt">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A Sector"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/frag_reserve_text_A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:text="47" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="60dp"
                    android:text="50" />

                <ProgressBar
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:max="50"
                    android:progress="50"
                    android:progressDrawable="@drawable/circular_progressbar_back"
                    android:rotation="270" />

                <ProgressBar
                    android:id="@+id/frag_reserve_progressbar_A"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:max="50"
                    android:progress="10"
                    android:progressDrawable="@drawable/circular_progressbar"
                    android:rotation="270" />

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/frag_RAC_SectorB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:transitionName="imgAlbumArt">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B Sector"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/frag_reserve_text_B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:text="47" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="60dp"
                    android:text="50" />

                <ProgressBar
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:max="50"
                    android:progress="50"
                    android:progressDrawable="@drawable/circular_progressbar_back"
                    android:rotation="270" />

                <ProgressBar
                    android:id="@+id/frag_reserve_progressbar_B"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:max="50"
                    android:progress="10"
                    android:progressDrawable="@drawable/circular_progressbar"
                    android:rotation="270" />

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/frag_RAC_SectorC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:transitionName="imgAlbumArt">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C Sector"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/frag_reserve_text_C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:text="47" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="60dp"
                    android:text="50" />

                <ProgressBar
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:max="50"
                    android:progress="50"
                    android:progressDrawable="@drawable/circular_progressbar_back"
                    android:rotation="270" />

                <ProgressBar
                    android:id="@+id/frag_reserve_progressbar_C"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:max="50"
                    android:progress="10"
                    android:progressDrawable="@drawable/circular_progressbar"
                    android:rotation="270" />

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/frag_RAC_SectorD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:transitionName="imgAlbumArt">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D Sector"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/frag_reserve_text_D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:text="47" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="60dp"
                    android:text="50" />

                <ProgressBar
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:max="50"
                    android:progress="50"
                    android:progressDrawable="@drawable/circular_progressbar_back"
                    android:rotation="270" />

                <ProgressBar
                    android:id="@+id/frag_reserve_progressbar_D"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:max="50"
                    android:progress="10"
                    android:progressDrawable="@drawable/circular_progressbar"
                    android:rotation="270" />

            </FrameLayout>


        </LinearLayout>
    </GridLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="나의 선호좌석"
                android:textSize="15dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/simpleback"
            android:padding="10dp"
            android:text="등록된 선호좌석이 없습니다." />

    </LinearLayout>

</LinearLayout>